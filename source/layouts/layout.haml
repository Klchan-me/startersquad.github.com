!!! 5
%html.no-js
  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    %title= current_page.data.title
    %meta{:name => 'viewport', :content => 'width=device-width'}
    <!--[if lt IE 8]>      <link href="/stylesheets/ie7.css"   rel="stylesheet">   <![endif]-->
    <!--[if IE 8]>         <link href="/stylesheets/ie8.css"   rel="stylesheet">   <![endif]-->
    <!--[if IE 9]>         <link href="/stylesheets/ie9.css"   rel="stylesheet">   <![endif]-->
    <!--[if gt IE 9]><!--> <link href="/stylesheets/style.css" rel="stylesheet"> <!--<![endif]-->
  %body
    .l-page
      .l-sidebar
        = partial('partials/brand')
        = partial('partials/nav')
      .l-content{:class => current_page.data[:formatted_text] ? 'formatted-text' : nil}
        = yield
        - if current_page.data[:has_pagination]
          = partial('partials/pagination')
    %script{:src => '/javascripts/script.js'}